{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/schema/tauri.schema.json",
    "productName": "Billly",
    "version": "0.1.0",
    "identifier": "com.oli.billly",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
        {
          "title": "Billly",
          "label": "main",
          "width": 1200,
                "height": 970,
                "minWidth": 970,
                "minHeight": 970,
                "resizable": true
            }
        ],
    "security": {
      "csp": null
    }
  },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png",
            "icons/icon.ico",
            "icons/icon.icns"
        ]
    }
}
